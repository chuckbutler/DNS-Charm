#!/usr/bin/python

from common import (
    probe_dhcp,
    log,
    unit_get,
)


def template_deployment():
    dhcp_config = probe_dhcp()
    if dhcp_config:
        print "We have a DHCP based host, scrape configuration"
        log('Found HOST IP of %s' % unit_get('public-address'), level='INFO')


def run_bind_tasks():
    template_deployment()


if __name__ == '__main__':
    run_bind_tasks()
